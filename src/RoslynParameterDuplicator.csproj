<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!-- Custom build output directories -->
    <BaseOutputPath>..\.net\bin\</BaseOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.7.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.Common" Version="4.7.0" />
  </ItemGroup>
  <ItemGroup>
    <!-- Exclude sample files from compilation -->
    <Compile Remove="samples/**/*.cs" />
    <Compile Remove="samples/*.example" />
    <!-- Include sample files as content -->
    <None Include="samples/**/*.cs" />
    <None Include="samples/*.example" />
  </ItemGroup>
</Project>
